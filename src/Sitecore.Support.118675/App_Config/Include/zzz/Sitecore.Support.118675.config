<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <scheduling>
      <agent patch:instead = "*[@type='Sitecore.Tasks.CounterDumpAgent']" type="Sitecore.Support.Diagnostics.PerformanceCounters.ExtendedCounterDumpAgent"  method="Run" interval="01:00:00" >
        <DumpFile>$(dataFolder)/diagnostics/counters.{date}.{time}.{processid}.txt</DumpFile>
      </agent>
    </scheduling>
  </sitecore>
</configuration>